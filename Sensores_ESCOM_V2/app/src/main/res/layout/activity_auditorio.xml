<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.components.Auditorio">

    <!-- Botón de regreso -->
    <Button
        android:id="@+id/button_back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@android:color/white"
        android:contentDescription="Back to Home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Estado de conexión -->
    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Auditorio - Conectando..."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Contenedor del mapa -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBluetoothStatus"
        app:layout_constraintBottom_toTopOf="@id/controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Layout de controles -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Botones de movimiento -->
        <GridLayout
            android:id="@+id/movement_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/transparent">

            <!-- Fila superior -->
            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_row="0"
                android:layout_column="0"/>

            <Button
                android:id="@+id/button_north"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="N"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:contentDescription="Move North"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <!-- Fila del medio -->
            <Button
                android:id="@+id/button_west"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="W"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:contentDescription="Move West"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/button_east"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="E"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:contentDescription="Move East"/>

            <!-- Fila inferior -->
            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/button_south"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="S"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:contentDescription="Move South"/>

            <Space
                android:layout_width="56dp"
                android:layout_height="56dp"/>

        </GridLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp">

            <Button
                android:id="@+id/button_small_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="B1"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"/>

            <Button
                android:id="@+id/button_small_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="BCK"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/button_a"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="A"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:alpha="0.7"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Puzzle" parent="Theme.Material3.DayNight">
        <!-- ActionBar style -->
        <item name="actionBarStyle">@style/Widget.Puzzle.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Puzzle.ActionBar</item>
        <!-- Controls etc -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- IPN Guinda Theme (Light) -->
    <style name="Theme.Puzzle.Guinda" parent="Base.Theme.Puzzle">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/ipn_primary</item>
        <item name="colorPrimaryVariant">@color/ipn_primary_variant</item>
        <item name="colorSecondary">@color/ipn_secondary</item>
        <item name="colorSurface">@color/ipn_surface</item>
        <item name="android:windowBackground">@color/ipn_background</item>
        <item name="colorError">@color/ipn_error</item>
        <item name="colorOnPrimary">@color/ipn_on_primary</item>
        <item name="colorOnSecondary">@color/ipn_on_secondary</item>
        <item name="colorOnBackground">@color/ipn_on_background</item>
        <item name="colorOnSurface">@color/ipn_on_surface</item>
        <item name="colorOnError">@color/ipn_on_error</item>
        <item name="puzzleTileColor">@color/ipn_tile</item>
        <item name="puzzleTileCorrectColor">@color/ipn_tile_correct</item>
        <!-- Typography -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Puzzle.Button</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Puzzle.Headline1</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Puzzle.Headline2</item>
    </style>

    <!-- ESCOM Azul Theme (Light) -->
    <style name="Theme.Puzzle.Azul" parent="Base.Theme.Puzzle">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/escom_primary</item>
        <item name="colorPrimaryVariant">@color/escom_primary_variant</item>
        <item name="colorSecondary">@color/escom_secondary</item>
        <item name="colorSurface">@color/escom_surface</item>
        <item name="android:windowBackground">@color/escom_background</item>
        <item name="colorError">@color/escom_error</item>
        <item name="colorOnPrimary">@color/escom_on_primary</item>
        <item name="colorOnSecondary">@color/escom_on_secondary</item>
        <item name="colorOnBackground">@color/escom_on_background</item>
        <item name="colorOnSurface">@color/escom_on_surface</item>
        <item name="colorOnError">@color/escom_on_error</item>
        <item name="puzzleTileColor">@color/escom_tile</item>
        <item name="puzzleTileCorrectColor">@color/escom_tile_correct</item>
        <!-- Typography -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Puzzle.Body1</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Puzzle.Button</item>
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Puzzle.Headline1</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Puzzle.Headline2</item>
    </style>

    <!-- Default theme is Azul -->
    <style name="Theme.Puzzle" parent="Theme.Puzzle.Azul" />

    <!-- Common text styles - updated to use base Material styles without Material3 specifics -->
    <style name="TextAppearance.Puzzle.Headline1" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Puzzle.Headline2" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Puzzle.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Puzzle.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ActionBar styles -->
    <style name="Widget.Puzzle.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/TextAppearance.Puzzle.ActionBar.Title</item>
    </style>

    <style name="ThemeOverlay.Puzzle.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.Puzzle.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Custom attributes for puzzle tiles -->
    <declare-styleable name="PuzzleTheme">
        <attr name="puzzleTileColor" format="color" />
        <attr name="puzzleTileCorrectColor" format="color" />
    </declare-styleable>
</resources>
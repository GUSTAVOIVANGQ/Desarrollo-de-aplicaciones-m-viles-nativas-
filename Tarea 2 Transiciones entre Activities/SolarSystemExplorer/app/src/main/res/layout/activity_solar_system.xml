<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solar_system">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="112dp"
        android:gravity="center"
        android:text="Sistema Solar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNeptunox"
        android:layout_width="140dp"
        android:layout_height="87dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="244dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Neptuno"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnTierra"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnUrano"
        android:layout_width="139dp"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Urano"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnMercurio"
        android:layout_width="126dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="128dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Mercurio"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/btnTierra"
        app:layout_constraintTop_toBottomOf="@+id/btnNeptunox" />

    <Button
        android:id="@+id/btnVenus"
        android:layout_width="115dp"
        android:layout_height="68dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="228dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Venus"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/btnSaturno"
        app:layout_constraintTop_toBottomOf="@+id/btnUrano" />

    <Button
        android:id="@+id/btnTierra"
        android:layout_width="111dp"
        android:layout_height="78dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Tierra"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnSaturno"
        app:layout_constraintEnd_toStartOf="@+id/btnVenus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMercurio" />

    <Button
        android:id="@+id/btnJupiter"
        android:layout_width="106dp"
        android:layout_height="64dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="155dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Jupiter"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMarte"
        app:layout_constraintTop_toBottomOf="@+id/btnVenus" />

    <Button
        android:id="@+id/btnSaturno"
        android:layout_width="137dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="142dp"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="Saturno"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPluto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTierra" />

    <Button
        android:id="@+id/btnMarte"
        android:layout_width="92dp"
        android:layout_height="63dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="112dp"
        android:background="@android:color/transparent"
        android:text="Marte"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnPluto"
        app:layout_constraintStart_toEndOf="@+id/btnSaturno" />

    <Button
        android:id="@+id/btnPluto"
        android:layout_width="118dp"
        android:layout_height="51dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/transparent"
        android:text="Pluto"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSaturno" />

</androidx.constraintlayout.widget.ConstraintLayout>